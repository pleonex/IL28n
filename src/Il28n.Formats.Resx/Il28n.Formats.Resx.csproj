<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Parsing and conversion library for .NET RESX format for localization messages</Description>
    <IsPackable>true</IsPackable>

    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>PleOps.Il28n.Formats.Resx</RootNamespace>

    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- TODO -->
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="$(PackageReadmeFile)" Visible="False" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Yarhl" />
    <PackageReference Include="Yarhl.Media.Text" />
  </ItemGroup>

</Project>
